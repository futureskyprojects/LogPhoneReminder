<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/fastDroidPrimaryColor" />
            <stroke android:width="1dp" android:color="@color/fastDroidPrimaryColor" />
            <corners android:radius="10dp" />
            <padding android:bottom="@dimen/space_default" android:left="@dimen/space_default" android:right="@dimen/space_default" android:top="@dimen/space_default" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/fastDroidPrimaryDisableColor" />
            <stroke android:width="1dp" android:color="@color/fastDroidPrimaryDisableColor" />
            <corners android:radius="10dp" />
            <padding android:bottom="@dimen/space_default" android:left="@dimen/space_default" android:right="@dimen/space_default" android:top="@dimen/space_default" />
        </shape>
    </item>
</selector>