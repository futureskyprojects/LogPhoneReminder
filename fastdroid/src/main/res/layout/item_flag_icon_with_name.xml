<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_ssm">

    <androidx.cardview.widget.CardView
        android:id="@+id/rvLanguageRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_sm">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/space_ssm">

                <ImageView
                    android:id="@+id/flagIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/vn" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/flagName"
                style="@style/Fastdroid.TextView.Label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space_sm"
                android:layout_marginLeft="@dimen/space_sm"
                android:layout_marginBottom="0dp"
                android:gravity="center|start"
                android:minWidth="100dp"
                android:text="Viá»‡t Nam"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>